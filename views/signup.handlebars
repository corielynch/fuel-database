{{> nav }}

<div class="container">
    <form id="signup" name="signup" method="post" action="signup">

        <div class="form-group">
            <label for="firstname">First name:</label><br>
            <input id="firstname" name="firstname" placeholder="Enter your First Name" type="text" />
        </div>

        <div class="form-group">
            <label for="lastname">Last name:</label><br>
            <input id="lastname" name="lastname" placeholder="Enter your Last Name" type="text" />
        </div>

        <div class="form-group">
            <label for="email">Email Address:</label><br>
            <input class="text" id="email" name="email" placeholder="Enter your Email" type="email" />
        </div>

        <div class="form-group">
            <label for="password">Password:</label><br>
            <input class="password" name="password" placeholder="Enter your Password" type="password" />
        </div>
        <button type="submit" class="btn-warning">Sign up</button>
    </form>
</div>

{{> footer }}