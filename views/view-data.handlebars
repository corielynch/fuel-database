<h1>View Fuel Data</h1>

<div class="container">
    <div class="row">
        <div class="col-md-4">
            <ul class="list-group">
                <li class="list-group-item active">Unleaded</li>
                <li class="list-group-item">Diesel</li>
            </ul>
        </div>
        <div class="col-md-4">
            <ul class="list-group">
                <li class="list-group-item active">Dump Truck</li>
                <li class="list-group-item">Backhoes</li>
                <li class="list-group-item">Personal Truck</li>
                <li class="list-group-item">Company Trucks</li>
                <li class="list-group-item">Small Equipment</li>
            </ul>
        </div>
        <div class="col-md-4">
            <div class="dropdown">
                <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenu2"
                    data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Choose Employee
                </button>
                <div class="dropdown-menu" aria-labelledby="dropdownMenu2">
                    <button class="dropdown-item" type="button">Action</button>
                    <button class="dropdown-item" type="button">Another action</button>
                    <button class="dropdown-item" type="button">Something else here</button>
                </div>
            </div>
        </div>
    </div>
        <div class="row">
            <div class="col-md-2">
                <div class="form-group">
                    <label for="month">Choose Month</label><br>
                    <input type="radio" name="createdAt" value="September2019"> September '19 <br>
                    <input type="radio" name="createdAt" value="October2019"> October '19 <br>
                    <input type="radio" name="createdAt" value="November2019"> November '19 <br>
                    <input type="radio" name="createdAt" value="December2019"> December '19<br>
                    <input type="radio" name="createdAt" value="January2020"> January '20<br>
                    <input type="radio" name="createdAt" value="February2020"> February '20<br>
                    <input type="radio" name="createdAt" value="March2020"> March '20<br>
                    <input type="radio" name="createdAt" value="April2020"> April '20<br>
                    <input type="radio" name="createdAt" value="May2020"> May '20<br>
                    <input type="radio" name="createdAt" value="June2020"> June '20<br>
                </div>
            </div>
            <div class="col-md-10">
                <table class="table table-dark" style="width: 90%;">
                    <thead>
                        <tr>
                            <th scope="col">Employee Name</th>
                            <th scope="col">Fuel Type</th>
                            <th scope="col">Vehicle</th>
                            <th scope="col">Gallons</th>
                            <th scope="col">Date</th>
                        </tr>
                    </thead>
                <tbody>
                        <tr>
                            <td>{{firstname}}{{lastname}}</td>
                            <td>{{fuel}}</td>
                            <td>{{vehicle}}</td>
                            <td>{{gallons}}</td>
                            <td>{{createdAt}}</td> 
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
</div>