{{> nav }}

<h1>Submit Fuel Data</h1><br><br>

<form class="create-form">

    <div class="form-group">
        <label for="type">Fuel Type</label><br>
        <input type="radio" name="fueltype" value="unleaded" checked> Unleaded <br>
        <input type="radio" name="fueltype" value="diesel"> Diesel
    </div><br>

    <div class="form-group">
        <label for="vehicle">Vehicle</label><br>
        <input type="radio" name="vehicletype" value="dumptruck"> Dump Truck <br>
        <input type="radio" name="vehicletype" value="Backhoe"> Backhoe <br>
        <input type="radio" name="vehicletype" value="companyvehicle"> Company Vehicle <br>
        <input type="radio" name="vehicletype" value="personalvehicle"> Personal Vehicle <br>
        <input type="radio" name="vehicletype" value="small"> Small Equipment
    </div><br>

    <div class="form-group">
        <label for="ga">Gallons Used:</label>
        <input type="number" id="ga" name="gallons">
    </div><br>

    <button type="submit">Submit</button>
</form>